<div class="container d-flex justify-content-center align-items-center vh-100 flex-column">
  <div class="card p-4 text-center mb-2" style="max-width: 350px; width: 100%; border: 1px solid #dbdbdb; border-radius: 8px;">
    <h2 class="mb-3 fw-bold">Sign up</h2>
    <p class="text-muted small mb-3">Sign up to see photos and videos from your friends.</p>

    <% if @user.errors.any? %>
      <div class="alert alert-danger small text-start">
        <ul class="mb-0">
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with(model: @user, local: true, html: { class: "text-start" }) do |f| %>
      <div class="mb-2">
        <%= f.email_field :email, class: "form-control form-control-sm", placeholder: "Mobile Number or Email", required: true %>
      </div>

      <div class="mb-2">
        <%= f.text_field :name, class: "form-control form-control-sm", placeholder: "Full Name", required: true %>
      </div>

      <div class="mb-2">
        <%= f.text_field :username, class: "form-control form-control-sm", placeholder: "Username", required: true %>
      </div>

      <div class="mb-3">
        <%= f.password_field :password, class: "form-control form-control-sm", placeholder: "Password", required: true %>
      </div>

      <div class="d-grid">
        <%= f.submit "Sign Up", class: "btn btn-primary btn-sm fw-semibold" %>
      </div>
    <% end %>
  </div>

  <div class="card p-3 text-center small" style="max-width: 350px; width: 100%; border: 1px solid #dbdbdb; border-radius: 8px;">
    Have an account? <%= link_to "Log in", login_path, class: "fw-semibold text-decoration-none" %>
  </div>
</div>
