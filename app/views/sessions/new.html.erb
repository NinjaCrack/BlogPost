<div class="container d-flex justify-content-center align-items-center vh-100 flex-column">
  <!-- Login Card -->
  <div class="card p-4 text-center mb-2" style="max-width: 350px; width: 100%; border: 1px solid #dbdbdb; border-radius: 8px;">
    <h2 class="mb-4 fw-bold" style="font-family: 'Billabong', cursive; font-size: 2.5rem;">InstaBlog</h2>

    <%= form_with url: login_path, html: { class: "text-start" } do %>
      <div class="mb-2">
        <%= email_field_tag :email, nil, class: "form-control form-control-sm", placeholder: "Phone number, username, or email", required: true %>
      </div>

      <div class="mb-3">
        <%= password_field_tag :password, nil, class: "form-control form-control-sm", placeholder: "Password", required: true %>
      </div>

      <div class="d-grid">
        <%= submit_tag "Log In", class: "btn btn-primary btn-sm fw-semibold", style: "background-color: #0095f6; border: none;" %>
      </div>
    <% end %>

    <p class="mt-3 small">
      <a href="#" class="text-decoration-none text-muted">Forgot password?</a>
    </p>
  </div>

  <!-- Sign up Card -->
  <div class="card p-3 text-center small" style="max-width: 350px; width: 100%; border: 1px solid #dbdbdb; border-radius: 8px;">
    Donâ€™t have an account? 
    <%= link_to "Sign up", new_user_path, class: "fw-semibold text-decoration-none", style: "color: #0095f6;" %>
  </div>
</div>
